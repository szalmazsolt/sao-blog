<h1>Blog Posts (<%= @blog_posts.size %>)</h1>

<% @posts.each do |blog_post| %>
  <h2><%= link_to blog_post.title, blog_post %></h2>
  <% if blog_post.draft? %>
    <p class="bg-gray-200 p-3 rounded">Draft</p>
  <% elsif blog_post.scheduled? %>
    <p class="bg-blue-200 p-3 rounded">Scheduled</p>
  <% end %>
  <p><%= blog_post.content %></p>
<% end %>

<section class="my-16">
  <%== pagy_nav(@pagy) %>
</section>