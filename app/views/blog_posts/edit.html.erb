<h1>
  Edit '<%= @blog_post.title %>'
</h1>

<%= form_with(model: @blog_post) do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true%>
  </div>

  <div>
    <%= f.label :body, "Post" %>
    <%= f.text_area :body, rows: 10 %>
  </div>

  <%= f.submit %>
<% end %>

<p>
  <%= button_to "Delete", blog_post_path(@blog_post), method: :delete, data: {turbo_confirm: "Are you sure?"} %>
</p>

<p>
  <%= link_to "Back to index", blog_posts_path %>
</p>

